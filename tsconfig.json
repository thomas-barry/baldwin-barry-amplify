{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "outDir": "build",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/modules/*": ["src/modules/*"],
      "@/context/*": ["src/context/*"],
      "@/lib/*": ["src/lib/*"],
      "@/assets/*": ["src/assets/*"],
      "@/routes/*": ["src/routes/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "constants.ts"
  ],
  "exclude": [
    "node_modules",
    "amplify/**/*",
    "**/*.test.ts",
    "build"
  ]
}
